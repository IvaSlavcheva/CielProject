@using System.Globalization
@model IEnumerable<Ciel.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Направени поръчки</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                @String.Format(new CultureInfo("bg-BG"), "{0:C}", item.TotalPrice)
             </td>
           <td>
                @Html.DisplayFor(modelItem => item.Address.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.Country)
            </td>
            <td>
                <div class="mt-4">
                      <a class="btn btn-dark" asp-route-orderId="@item.Id" asp-action="Details">Детайли</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
