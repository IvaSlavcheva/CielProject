@using Ciel.Models.NewModelView
@using System.Globalization
@model IEnumerable<Ciel.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: none;
        padding: 10px;
        text-align: center;
    }

    img {
        border-radius: 50%;
    }
</style>
<h1></h1>
<div>
    <table>
        <tr>
            <th>
                <img class="rounded-circle" src="~/images/eyezone.jpg" width="100" height="100" alt="Околоочна зона" class="rounded">
                <a asp-action="SearchByCatalog" asp-route-catalogId="1"><p>Околоочна зона</p></a>
            </th>
            <th>
                <img class="rounded-circle" src="~/images/lashes.jpg" width="100" height="100" alt="Вежди и мигли" class="rounded">
                <a asp-action="SearchByCatalog" asp-route-catalogId="2"><p>Вежди и мигли</p></a>
            </th>
            <th>
                <img class="rounded-circle" src="~/images/lips.jpg" width="100" height="100" alt="Устни" class="rounded">
                <a asp-action="SearchByCatalog" asp-route-catalogId="3"><p>Устни</p></a>
            </th>
            <th>
                <img class="rounded-circle" src="~/images/face.jpg" width="100" height="100" alt="Цялостна грижа" class="rounded">
                <a asp-action="SearchByCatalog" asp-route-catalogId="4"><p>Цялостна грижа</p></a>
            </th>
        </tr>
    </table>
</div>
<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-md-3 col-xs-4 border-primary mb-3" >
            <div class="card mb-4" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.ProductName
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6 text-center">
                        <img src="~/images/@item.Picture" width="100%" asp-append-version="true" alt="@item.ProductName">
                    </div>
                    <div class="col-md-">
                        <div class="card-body">
                            <p class="card-text">@item.Description.Substring(0, Math.Min(150, item.Description.Length))...</p>
							<class ="align-middle">
								<p class="card-text">@item.Catalog.CatalogName</p>
								@String.Format(new CultureInfo("bg-BG"), "{0:C}", item.Price)                        
                            
                        </div>
                    </div>
                      <div class="col-md-12">                                               
                           <div class="card-footer ">
                                <p class="card-text">
                                    <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="bi bi-eye-fill"></i> Покажи детайлите
                                    </a>						
                                </p>
                           </div>
                </div>              
            </div>
       </div> 
    
</div>
}