@using Ciel.Models.NewModelView
@using System.Globalization
@model IEnumerable<Ciel.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1></h1>
<form id="searchForm" method="get">
    <p>
        <label for="nameSearch">Търси по име: </label>
        <input type="text" id="nameSearch" name="nameSearch" value="@ViewData["NameSearch"]" />

            <button class="btn btn-primary" type="submit">Търси</button>
            <a class="btn btn-primary" asp-action="Index">Изчисти</a>
    </p>
</form>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-xs-4 border-primary mb-3" >
            <div class="card mb-4" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.ProductName
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6 text-center">
                        <img src="~/images/@item.Picture" width="100%" asp-append-version="true" alt="@item.ProductName">
                    </div>
                    <div class="col-md-">
                        <div class="card-body">
                            <p class="card-text">@item.Description.Substring(0, Math.Min(150, item.Description.Length))...</p>
							<class ="align-middle">
								<p class="card-text">@item.Catalog.CatalogName</p>
								@String.Format(new CultureInfo("bg-BG"), "{0:C}", item.Price)                        
                            
                        </div>
                    </div>
                      <div class="col-md-12">                                               
                           <div class="card-footer ">
                                <p class="card-text">
                                    <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="bi bi-eye-fill"></i> Покажи детайлите
                                    </a>						
                                </p>
                           </div>
                </div>              
            </div>
       </div> 
    
</div>
}