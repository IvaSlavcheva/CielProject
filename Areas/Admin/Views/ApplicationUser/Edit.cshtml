@model Ciel.Models.ApplicationUser
<head>
	<link rel="stylesheet" href="~/css/UserEdit.css" asp-append-version="true" />
</head>

<div class="center-text">
	<h1 class="styled-header">Редактиране на потребител</h1>
</div>

<form asp-action="Edit">
	<input type="hidden" asp-for="Id" />
	<div class="form-group">
		<label asp-for="Name"></label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="LastName"></label>
		<input asp-for="LastName" class="form-control" />
		<span asp-validation-for="LastName" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Email">Имейл</label>
		<input asp-for="Email" class="form-control" />
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="UserName">Потребителско име</label>
		<input asp-for="UserName" class="form-control" />
		<span asp-validation-for="UserName" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="PhoneNumber">Телефонен Номер</label>
		<input asp-for="PhoneNumber" class="form-control" />
		<span asp-validation-for="PhoneNumber" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="EGN"></label>
		<input asp-for="EGN" class="form-control" />
		<span asp-validation-for="EGN" class="text-danger"></span>
	</div>
	<div style="height: 30px;"></div>
	<center>
		<button class="btn btn-outline-dark" type="submit"> <i class="bi bi-cloud-download"></i> Запази промените</button>
		<button class="btn btn-outline-dark" type="submit" asp-action="Index"><i class="bi bi-arrow-bar-left"></i> Назад</button>
	</center>
</form>
<div style="height: 100px;"></div>