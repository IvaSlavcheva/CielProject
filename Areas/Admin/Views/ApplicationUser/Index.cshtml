@model IEnumerable<Ciel.Models.ApplicationUser>

@{

    ViewData["Title"] = "Потребители";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Списък за потребители</title>
</head>
<body>
    <div class="container">
        <center>
        <h1>Списък за потребители</h1>
		</center>
        <div class="overflow-auto">
            <table class="table table-hover">
                <thead>
                    <tr class="bg-success text-center" style="background-color: black !important;">
                        <th class="text-light">

                            Име

                        </th>
                        <th class="text-light">

                            Фамилия

                        </th>

                        <th class="text-light">

                            Имейл

                        </th>

                        <th class="text-light">

                            Телефонен номер

                        </th>

                        <th class="text-light">

                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)

                    {

                        <tr class="table-light text-center">

                            <td>

                                @Html.DisplayFor(modelItem => item.Name)

                            </td>

                            <td>

                                @Html.DisplayFor(modelItem => item.LastName)

                            </td>

                            <td>

                                @Html.DisplayFor(modelItem => item.Email)

                            </td>

                            <td>

                                @Html.DisplayFor(modelItem => item.PhoneNumber)

                            </td>

                            <td>

                                <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.Id">Детайли</a>
                                <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@item.Id">Редактирай</a>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
      
        <center>
            <a class="btn btn-outline-dark" asp-area="" asp-controller="Home" asp-action="Index" class="back-button"> <i class="bi bi-arrow-bar-left"></i> Назад</a>
            <a class="btn btn-outline-dark" asp-action="Create" asp-controller="ApplicationUser"><i class="bi bi-person-plus"></i> Създай</a>
        </center>
    </div>

</body>
</html>


