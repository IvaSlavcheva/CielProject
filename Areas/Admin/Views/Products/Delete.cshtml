@model Ciel.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Изтрий</h1>

<h3>Сигурни ли сте, че искате да изтриете продукта?</h3>
<div>
    <h4>Продукт</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Picture)
        </dt>
        <dd class = "col-sm-10">
            <img width="10%" src="~/images/@Model.Picture" alt="product image" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Catalog)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Catalog.CatalogName)
        </dd>
    </dl>

    <form asp-action="Delete" id="deleteForm" onsubmit="return confirmDelete();">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Изтрий</button>
        <a class="btn btn-outline-info" asp-action="Index">Назад</a>
    </form>
</div>
<script>
    function confirmDelete() {
        return confirm('Сигурни ли сте, че искате да изтриете продукта?');
    }
</script>
