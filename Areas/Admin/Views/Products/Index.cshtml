@using Ciel.Models.NewModelView
@model IEnumerable<Ciel.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1></h1>

<p>
   @*  <a asp-action="Create">Създаване на продукт</a> *@
    <a class="btn btn-outline-primary" asp-action="Create" ><i class="bi bi-pencil-square"></i>Създаване на продукт</a> 
</p>
<form id="searchForm" method="get">
    <p>
        <label for="nameSearch">Search by Name: </label>
        <input type="text" id="nameSearch" name="nameSearch" value="@ViewData["NameSearch"]" />
        <button type="submit">Search</button>
        <button type="button" onclick="clearSearch('name')">Clear</button>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Име на продукт
            </th>
            <th>
                Описание
            </th>
            <th>
                Снимка
            </th>
            <th>
               Цена
            </th>
            <th>
                Каталог
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Description)
				</td>
				<td class="align-middle">
					<img class="rounded-circle" src="~/Images/@item.Picture" alt="@item.ProductName" style="max-width: 100px" />
				</td>
                <td class="align-middle">
                    @string.Format("{0:C2}", item.Price)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Catalog.CatalogName)
                </td>

                <td class="align-middle">
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Редактирай</a>
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Детайли </a> 
                    <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Изтрий</a>
                </td>


            </tr>
        }
    </tbody>

</table>

