@model Ciel.Models.Catalog

@{
    ViewData["Title"] = "Create";
}

<h1>Създай</h1>

<h4>Каталог</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CatalogName" class="control-label"></label>
                <input asp-for="CatalogName" class="form-control" />
                <span asp-validation-for="CatalogName" class="text-danger"></span>
            </div>
            <div class="form-group">
				<input type="submit" value="Създай" class="btn btn-primary" />
                <a class="btn btn-outline-info" asp-action="Index"><i></i>Назад</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
