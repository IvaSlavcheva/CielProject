@model IEnumerable<Ciel.Models.Catalog>

@{
    ViewData["Title"] = "Index";
}

<h1></h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create"><i class="bi bi-pencil-square"></i>Създаване на каталог</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Каталог
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CatalogName)
            </td>
            <td>
                <td class="align-middle">
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Редактирай </a>
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Детайли </a>
                    <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Изтрий</a>
                </td>
            </td>
        </tr>
}
    </tbody>
</table>
